# ===========================================
# TRAP INVENTORY MANAGEMENT SYSTEM
# Environment Configuration
# ===========================================

# Django Configuration
DJANGO_SECRET_KEY=your-super-secret-key-change-in-production
DJANGO_ENV=development
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (PostgreSQL)
POSTGRES_DB=trap_inventory
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password-here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Cloud SQL Connection (Production - Cloud Run only)
# CLOUD_SQL_CONNECTION_NAME=project-id:region:instance-name

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_APP_NAME=TRAP Inventory

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000

# CSRF Trusted Origins (Production)
# CSRF_TRUSTED_ORIGINS=https://your-frontend.vercel.app

# Development Options
# Set to 'true' to use SQLite instead of PostgreSQL for quick development
USE_SQLITE=false
